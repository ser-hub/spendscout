{% extends 'layout.html.twig' %}

{# ... #}

{% block page_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}">

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password">

        {# on success redirect to app_home #}
        <input type="hidden" name="_target_path" value="/home">
        {# CSRF protection for the login form #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">login</button>
    </form>
    <a href="{{ path('app_forgot_password_request')}}">forgot my password</a>

    <a href="{{ path('app_register')}}">Sign in</a>

    {% for message in app.flashes('registration_success') %}
    <div class="flash-notice">
        {{ message }}
    </div>
{% endfor %}
{% endblock %}